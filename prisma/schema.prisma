// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  login String @unique
  email String @unique
  password String
  newslatter Boolean
  isAdmin Boolean
}

model Quiz{
	id Int @id @default(autoincrement())
	name String @unique
	description String
  pathname String
	isNew Boolean
	isActive Boolean
  randomize1Question Boolean
  randomize40Questions Boolean
  randomizeXQuestions Boolean
  rankedGame Boolean
  showAllQuestions Boolean
  printTest Boolean
  competeWithFriends Boolean
	questions Question[] 
}

enum AnswerOption {
  answerA
  answerB
  answerC
  answerD
}

model Question{
	id Int @id @default(autoincrement())
	quiz Quiz @relation(fields: [quizID], references: [id], onDelete: Cascade)
	question String
	answerA String
	answerB String
	answerC String
	answerD String
	correctAnswer AnswerOption
  quizID Int
}