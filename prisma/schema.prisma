generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  login String @unique
  email String @unique
  password String
  newslatter Boolean
  isAdmin Boolean
}


